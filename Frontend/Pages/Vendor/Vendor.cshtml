@page
@model Frontend.Pages.Vendor.VendorModel
@{
    ViewData["Title"] = "Vendor";
}

<h2>Vendor</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Vendor.BusinessName"></label>
        <input asp-for="Vendor.BusinessName" class="form-control" />
        <span asp-validation-for="Vendor.BusinessName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Vendor.ContactPerson"></label>
        <input asp-for="Vendor.ContactPerson" class="form-control" />
        <span asp-validation-for="Vendor.ContactPerson" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Vendor.Email"></label>
        <input asp-for="Vendor.Email" class="form-control" />
        <span asp-validation-for="Vendor.Email" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Apply</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
