@page
@model Frontend.Pages.AuthChoice.AuthChoiceModel
@{
    ViewData["Title"] = "Authentication Choice";
}

<div class="text-center">
    <h2>@ViewData["Title"]</h2>
    <p>You have selected to <strong>@Model.UserRole</strong>.</p>
    <p>Please choose an action:</p>
    <div class="btn-group" role="group" aria-label="Authentication Actions">
        <a href="/AuthChoice/AuthChoice?handler=AuthChoiceRedirect&role=@Model.Role&action=Login"
            class="btn btn-primary">Login</a>
        <a href="/AuthChoice/AuthChoice?handler=AuthChoiceRedirect&role=@Model.Role&action=SignIn"
            class="btn btn-success">Sign In</a>
    </div>
</div>
