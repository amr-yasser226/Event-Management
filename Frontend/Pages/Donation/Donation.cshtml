@page
@model Frontend.Pages.Donation.DonationModel
@{
    ViewData["Title"] = "Donate";
}

<h2>Donate</h2>
<p>This is a test to verify if the Donation page loads correctly.</p>

<form method="post">
    <div class="form-group">
        <label asp-for="Donation.Amount"></label>
        <input asp-for="Donation.Amount" class="form-control" />
        <span asp-validation-for="Donation.Amount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Donation.YourName"></label>
        <input asp-for="Donation.YourName" class="form-control" />
        <span asp-validation-for="Donation.YourName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Donation.Email"></label>
        <input asp-for="Donation.Email" class="form-control" />
        <span asp-validation-for="Donation.Email" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Donate</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
